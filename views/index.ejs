<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
  <div class="form p-10 text-white">
    <form action="/create" method="POST">
        <input class="block px-5 py-2 bg-zinc-800 w-full rounded-md" type="text"  placeholder="What's up" name="title" />
        <textarea class="block px-5 mt-2 py-2 bg-zinc-800 resize-none w-full rounded-md" placeholder="What's the matter" name="desc"></textarea>
        <!-- <textarea class="block px-5 mt-2 py-2 bg-zinc-800 resize-none w-full rounded-md" placeholder="What's the matter"></textarea> -->

        <input type="Submit" class="mt-2 text-color bg-blue-600 px-5 py-2 rounded-md" value="Create Task" />
    </form>
    
  </div>
  <div class="tasks p-10 flex  gap-5">
    <% if(files.length>0) {%>
      <% files.forEach(function(val){%>
        <div class="task w-72  px-3 py-2 bg-zinc-800 rounded-md">
          <h1 class="text-white text-3xl tracking-tighter"><%= val%></h1>
          <div class="flex w-full justify-between">
          <a href="/files/<%= val%>" class="text-blue-800 inline-block ">Read more.</a>
           <a href="/edit/<%= val%>" class="text-zinc-400">edit</a></div>
           <form action="/delete" method="POST" class="inline-block">
            <input type="hidden" name="filename" value="<%= val %>">
            <button type="submit" class=" text-xs text-red-500">Delete</button>
          </form>
        </div>
        <%}) %>
        <%} else {%>
          <h1 class="text-zinc-400">no tasks yet.</h1>
          <%} %>
    
   
  </div>
</div>
</body>
</html>